{
  "name": "osc-t2s-server",
  "version": "1.0.0",
  "description": "WebSocket server for OSC Text to Speech",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "serve": "http-server -a 0.0.0.0 -p 8000 -c-1",
    "dev": "concurrently \"npm run start\" \"npm run serve\""
  },
  "dependencies": {
    "ws": "^8.16.0",
    "node-osc": "^8.0.12",
    "http-server": "^14.1.1",
    "concurrently": "^8.2.2"
  }
} 