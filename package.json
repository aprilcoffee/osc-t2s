{
  "name": "osc-t2s",
  "version": "1.0.0",
  "description": "Speech to OSC converter using Whisper API",
  "main": "bridge.js",
  "bin": "bridge.js",
  "pkg": {
    "assets": [
      "index.html",
      "sketch.js",
      "client/**/*"
    ],
    "targets": [
      "node16-macos-x64",
      "node16-win-x64",
      "node16-linux-x64"
    ],
    "outputPath": "dist"
  },
  "scripts": {
    "start": "node bridge.js",
    "dev": "nodemon bridge.js",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "pkg . --out-path dist",
    "build:all": "pkg . --out-path dist --targets node16-macos-x64,node16-linux-x64,node16-win-x64",
    "build:mac": "pkg . --target node16-macos-x64 --output dist/osc-t2s-mac",
    "build:win": "pkg . --target node16-win-x64 --output dist/osc-t2s-win.exe",
    "build:linux": "pkg . --target node16-linux-x64 --output dist/osc-t2s-linux",
    "clean": "rm -rf dist/*",
    "prebuild": "npm run clean",
    "postinstall": "node -e \"try { require('fs').symlinkSync(require('path').resolve('node_modules'), 'dist/node_modules', 'junction') } catch (e) { }\"",
    "package": "npm run build && cd dist && zip -r osc-t2s.zip *"
  },
  "keywords": [
    "osc",
    "speech",
    "whisper",
    "openai",
    "audio",
    "transcription"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.2",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "socket.io": "^4.7.2"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "pkg": "^5.8.1"
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
